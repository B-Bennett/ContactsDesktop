<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.web.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>


<GridPane alignment="center" hgap="10" prefHeight="600.0" prefWidth="800.0" vgap="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8" fx:controller="sample.Controller">
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
   <children>
      <VBox prefHeight="200.0" prefWidth="100.0" GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS">
         <children>
            <HBox prefHeight="56.0" prefWidth="800.0" VBox.vgrow="ALWAYS">
               <children>
                  <TextField fx:id="textName" prefHeight="27.0" prefWidth="220.0" promptText="Name" HBox.hgrow="ALWAYS" />
                  <TextField fx:id="textPhone" prefHeight="27.0" prefWidth="220.0" promptText="Phone#" HBox.hgrow="ALWAYS" />
                  <TextField fx:id="textEmail" prefHeight="27.0" prefWidth="220.0" promptText="Email" HBox.hgrow="ALWAYS" />
                  <Button mnemonicParsing="false" onAction="#addContact" prefHeight="27.0" prefWidth="75.0" text="Add" HBox.hgrow="ALWAYS" />
                  <Button mnemonicParsing="false" onAction="#removeContact" prefHeight="27.0" prefWidth="75.0" text="Remove" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <ListView fx:id="listView" prefHeight="602.0" prefWidth="800.0" />
         </children>
      </VBox>
   </children>
</GridPane>
